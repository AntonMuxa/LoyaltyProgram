        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_entity">
        <column xsi:type="int" name="loyalty_points" padding="11" unsigned="true" nullable="false" identity="false"
                comment="loyalty points"/>
        <column xsi:type="int" name="loyalty_parent_ref" padding="11" unsigned="true" nullable="false" identity="false"
                comment="loyalty parent ref"/>
    </table>
    <table name="customer_group">
        <column xsi:type="int" name="loyalty_percent" padding="11" unsigned="true" nullable="false" identity="false"
                comment="loyalty percent"/>
    </table>
</schema>